<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Principal</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/menus/pedidos.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/trade-gothic-lt-std" rel="stylesheet">
    <script src="/javascripts/menus/pedidos.js"></script>
</head>

<body>
    <header>
        <nav>
            <div class="nav-wrapper">
                <div class="header-logo">
                    <img src="images/logo.png" alt="" id="logo">
                </div>
                <div class="header-links">
                    <ul class="header-nav">
                        <li>
                            <a href="">Reservar</a>
                        </li>
                        <li>
                            <a href="/login">
                                <i class="bi bi-person"></i>
                                Entrar
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="cardapio">
            <div class="cardapio-content">
                <div class="content-text">
                    <div class="container">
                        <div class="wrapper">
                            <h1 id="title title-text">Menu Principal</h1>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="wrapper">
                        <div class="catalog-menu">
                            <form action="">
                                <div class="cardapio-search">
                                    <div class="cardapio-search-wrap">
                                        <i class="fa-solid fa-magnifying-glass"></i>
                                        <div class="cardapio-search-input">
                                            <input type="text" class="search-input"
                                                placeholder="Procure seu prato favorito">
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="catalog-menu-wrap">
                                <a href="/">
                                    <div class="image-wrap">
                                        <picture>
                                            <img src="https://cdn.outback.com.br/wp-data/wp-content/uploads/2024/04/ribsbarbie-65a8ac305a91a.webp"
                                                alt="" id="img-catalog">
                                        </picture>
                                    </div>
                                    <p id="menu-name" class="active">Menu Principal</p>
                                </a>
                                <a href="/bebidas">
                                    <div class="image-wrap">
                                        <picture>
                                            <img src="https://cdn.outback.com.br/wp-data/wp-content/uploads/2024/07/Categoria-Bebidas.webp"
                                                alt="" id="img-catalog">
                                        </picture>
                                    </div>
                                    <p id="menu-name">Bebidas</p>
                                </a>
                                <a href="/sobremesa">
                                    <div class="image-wrap">
                                        <picture>
                                            <img src="https://cdn.outback.com.br/wp-data/wp-content/uploads/2024/07/Categoria-Sobremesa.webp"
                                                alt="" id="img-catalog">
                                        </picture>
                                    </div>
                                    <p id="menu-name">Sobremesas</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <section class="cardapio-items" id="cardapio">
                <% menus.forEach(subcolecao=> { %>
                    <div class="cardapio-options">
                        <div class="container-options">
                            <div class="wrapper">
                                <div class="option-title">
                                    <h2>
                                        <%= subcolecao.subcolecao %>
                                    </h2>
                                </div>
                                <div class="option-wrap">
                                    <% subcolecao.items.forEach(item=> { %>
                                        <div class="option-item">
                                            <div class="option-item-wrap">
                                                <div class="image-item">
                                                    <picture>
                                                        <img src="<%= item.imagem %>" alt="<%= item.nome%>"
                                                            id="option-img-<%= item.id%>" class="option-img">
                                                    </picture>
                                                </div>
                                                <div class="option-name">
                                                    <p id="nome-<%= item.id %>">
                                                        <%= item.nome %>
                                                    </p>
                                                </div>
                                                <div class="option-price">
                                                    <span id="preco-<%= item.id %>">
                                                        <%= item.preco ? `R$${item.preco.toLocaleString('pt-br',
                                                            {minimumFractionDigits: 2})}` : 'sob consulta' %>
                                                    </span>
                                                </div>
                                                <button id="option-item-btn"
                                                    onclick="abrirSidebar(), itemsSelecionados('<%= item.id %>')">Adicionar</button>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </section>
        </div>
    </main>
    <section id="sidebar">
        <div id="container-sidebar">
            <div id="wrapper-sidebar">
                <div class="sidebar-content">
                    <div class="pedidos"></div>
                    <div class="total-finalizar-wrapper">
                        <div class="pedidos-total">
                            <Strong>Total:</Strong>
                            <Strong id="valor-total"></Strong>
                        </div>
                        <div class="finalizar-btn">
                            <button id="btn-continuar" onclick="window.location.href='/formulario';">Continuar Pedindo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <button id="fechar-sidebar-btn" onclick="toggleSidebar()" title="Fechar" aria-label="Fechar">
        <i class="bi bi-chevron-right"></i>
    </button>
</body>

</html>